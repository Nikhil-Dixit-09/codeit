<link rel="stylesheet" href="/css/signin.css">
<h1>Sign In</h1>
<div id="flex">
    <form action="/users/create-session" method="post">
        <div>
            <label for="email" class="label">Username: </label>
            <input type="email" placeholder="Enter Username" name="email" required class="input">
        </div>
        <div>
            <label for="password" class="label">Password: </label>
            <input type="password" placeholder="Enter Password" name="password" required class="input">
        </div>
        <div>   
            <button type="submit">Login</button>
        </div>
    </form>
   
    

</div>