<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="/js/jquery-3.6.2.js"></script>
        <link rel="stylesheet" href="/css/layout.css">
        <%- style %>
    </head>
    
    <body>
        <div class="layout">
            <%- include('_header'); %>
        </div>
        <div class="layout" id="flash">
           <% if(flash.success && flash.success.length>0){ %>
            <h5>
                <%= flash.success %>
            </h5>
           <% } %>
        </div>
        <main>
            <%- body %>
        </main>
        
        <div class="layout">
            <%- include('_footer'); %>
        </div>
        
        <script src="/js/layout.js"></script>
        <%- script %>
    </body>
</html>